    "/api/uploadFoto": {
      "post": {
        "tags": ["Fotos"],
        "summary": "Upload de uma imagem para o MinIO vinculada a uma pessoa",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "foto": {
                    "type": "string",
                    "format": "binary"
                  },
                  "pes_id": {
                    "type": "integer",
                    "example": 1
                  }
                },
                "required": ["foto", "pes_id"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Upload realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "mensagem": { "type": "string" },
                    "arquivo": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": { "description": "Erro no upload do arquivo ou pes_id ausente" },
          "500": { "description": "Falha ao enviar para o MinIO" }
        }
      }
    },
